@model MyWebApp.Models.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Show Category";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="AddEditCategory" asp-controller="Category">Add Category&nbsp;<i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width=100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model.categories)
        {   
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.DisplayOrder
            </td>
            <td class="group">
                    <a asp-action="AddEditCategory" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

